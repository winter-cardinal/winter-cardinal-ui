{
	"compilerOptions": {
		"target": "ES2017",
		"newLine": "lf",
		"outDir": "dist/",
		"sourceMap": true,
		"inlineSources": true,
		"module": "ES2022",
		"moduleResolution": "Node",
		"skipLibCheck": false,
		"importHelpers": true,
		"declaration": true,
		"declarationDir": "dist/types",

		"lib": [ "dom" ],

		"strict": true,
		"downlevelIteration": false,
		"preserveConstEnums": true,
		"stripInternal": true,
		"incremental": true,
		"experimentalDecorators": true,
		"esModuleInterop": true
	},
	"include": [
		"src/main/typescript/"
	],
	"exclude": [
		"node_modules"
	]
}
